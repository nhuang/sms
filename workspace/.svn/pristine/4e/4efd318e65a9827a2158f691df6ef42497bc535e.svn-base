@model FVTS.Models.VolunteerProfileModel


<h2>Volunteer Profile - @Model.constituentCode</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <input type="hidden" name="volunteerId" value='@Model.volunteerId' />
    <table style="width: 100%">
        <tr>
            <td>@Html.LabelFor(model => model.title)</td>
            <td>
                @(Html.Kendo().DropDownList()
                      .Name("title")
                      .DataTextField("keyName")
                      .DataValueField("keyValue")
                      .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("Title_List_Read", "Definition"); //Set the Action and Controller name
                            })
                            .ServerFiltering(true); //If true the DataSource will not filter the data on the client.
                        })
                      .SelectedIndex(0)
                      .Value(@Model.title)
                  )
            </td>
            <td>@Html.LabelFor(model => model.birthday)</td>
            <td>@Html.Kendo().DatePickerFor(model => model.birthday)</td>
            <td>@Html.LabelFor(model => model.status)</td>
            <td>
                @(Html.Kendo().DropDownList()
                      .Name("status")
                      .DataTextField("keyName")
                      .DataValueField("keyValue")
                      .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("ActiviteStatus_List_Read", "Definition"); //Set the Action and Controller name
                            })
                            .ServerFiltering(true); //If true the DataSource will not filter the data on the client.
                        })
                      .SelectedIndex(0)
                  )
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.firstName)</td>
            <td>
                <input id="firstName" name="firstName" type="text" required class="k-textbox" value='@Model.firstName' /></td>
            <td>@Html.LabelFor(model => model.gender)</td>
            <td>
                @(Html.Kendo().DropDownList()
                      .Name("gender")
                      .DataTextField("keyName")
                      .DataValueField("keyValue")
                      .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("Gender_List_Read", "Definition"); //Set the Action and Controller name
                            })
                            .ServerFiltering(true); //If true the DataSource will not filter the data on the client.
                        })
                      .SelectedIndex(0)
                      .Value(@Model.gender)
                  )
            </td>
            <td>@Html.LabelFor(model => model.activatedOn)</td>
            <td>@Html.Kendo().DatePickerFor(model => model.activatedOn)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.lastName)</td>
            <td>
                <input id="lastName" name="lastName" type="text" required class="k-textbox" value='@Model.lastName' /></td>
            <td>@Html.LabelFor(model => model.homePhone)</td>
            <td>@Html.Kendo().AutoCompleteFor(model => model.homePhone)</td>
             <td>@Html.LabelFor(model => model.transitPass)</td>
            <td>
                @(Html.Kendo().DropDownList()
                      .Name("transitPass")
                      .DataTextField("keyName")
                      .DataValueField("keyValue")
                      .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("TransitPass_List_Read", "Definition"); //Set the Action and Controller name
                            })
                            .ServerFiltering(true); //If true the DataSource will not filter the data on the client.
                        })
                      .SelectedIndex(0)
                      .Value(@Model.transitPass)
                  )
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.email)</td>
            <td>
                <input class="k-textbox"  id="Email" name="Email" required type="email" value='@Model.email' /></td>
            <td>@Html.LabelFor(model => model.cellPhone)</td>
            <td>@Html.Kendo().AutoCompleteFor(model => model.cellPhone)</td>
            <td>@Html.LabelFor(model => model.orientation)</td>
            <td>
                 @(Html.Kendo().DropDownList()
                      .Name("orientation")
                      .DataTextField("keyName")
                      .DataValueField("keyValue")
                      .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("Orientation_List_Read", "Definition"); //Set the Action and Controller name
                            })
                            .ServerFiltering(true); //If true the DataSource will not filter the data on the client.
                        })
                      .SelectedIndex(0)
                      .Value(@Model.orientation)
                  )
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" class="k-button" value="Update Profile" />
    </p>
}