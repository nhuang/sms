@model FVTS.Models.ShiftRecordModels

@using (Html.BeginForm("VolunteerHistoryCreate", "Volunteer"))
{
    @Html.ValidationSummary(true)

    <input type ="hidden" name="volunteerId" value="@Model.volunteerId" />
    <table>
        <tr>
            <td>
                @(Html.Kendo().DropDownList()
                      .Name("teamName")
                      .DataTextField("keyName")
                      .DataValueField("keyValue")
                      .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("Team_List_Read", "Definition"); //Set the Action and Controller name
                            })
                            .ServerFiltering(true); //If true the DataSource will not filter the data on the client.
                        })
                      .SelectedIndex(0)
                      .HtmlAttributes(new { style = "width:" + 250 + "px" })
                  )

            </td>
            <td>@Html.Kendo().DateTimePickerFor(model => model.startOn).Value(DateTime.Now)</td>
            <td>
                <input type="submit" class="k-button" value="Sign In" /></td>
        </tr>
    </table>     

}

